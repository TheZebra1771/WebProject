
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div style="align-content:center;margin-top:50px;padding:30px;">
    <div style="background-color:red;width:100px;height:100px;float:left;"><img style="height:99px;width:99px;" src="~/image.jpg" /></div>
    <div>
        <div style="width:80%">
            <h3 style="float:left;margin-left:30px;">@ViewBag.prodinfo["Name"]</h3>
        </div>

        <div style="float:right; width:20%;">
            <h4>Price: @ViewBag.prodinfo["Price"] TL</h4>
        </div>
        <br />
        <br />
        <h5 style="float:right">Seller: @ViewBag.prodinfo["Customer_ID"]</h5>

        <div id="buy" style="float:right;margin-right:50px">
            @Html.ActionLink("Details", "Details", "Home", new { id = ViewBag.prodinfo["ID"] }, null)
            @Html.ActionLink("Buy", "Buy", "Home", new { id = ViewBag.prodinfo["ID"] }, null)
        </div>
    </div>
