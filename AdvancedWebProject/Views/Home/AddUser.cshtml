
@{
    ViewBag.Title = "AddUser";
}

<h2>AddUser</h2>
<script>notsignedin();</script>
@{
    if (Session["signin"] == "1")
    {
        <script>signedin();</script>
    }
}


<form action="/Home/AddUserToDB" style="position:center" method="post">
    Name:
    <input type="text" style="position:center;" name="name" /><br /><br />
    Surname:
    <input type="text" name="surname" /><br /><br />
    Mail:
    <input type="text" style="min-width:600px" name="mail" /><br /><br />
    Phone Number:
    <input type="number" name="phone" /><br /><br />
    Password:
    <input type="password" name="password" /><br /><br />
    <input type="submit" />
</form>
>
@section scripts
    {
    <script type="text/javascript">

        function signedin() {
            document.getElementById('signin').style.visibility = 'hidden';
            document.getElementById('signout').style.visibility = 'visible';
        }

        function notsignedin() {
            document.getElementById('signin').style.visibility = 'visible';
            document.getElementById('signout').style.visibility = 'hidden';
        }
    </script>}