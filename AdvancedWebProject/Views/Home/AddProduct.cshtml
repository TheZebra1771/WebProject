
<script>notsignedin();</script>
@{
    if (Session["signin"] == "1")
    {
        <script>signedin();</script>
    }
}

<br />
<form action="/Home/AddProductToDB" style="position:center" method="post">
    Name:
    <input type="text" style="position:center;" name="name" />
    Price:
    <input type="text" name="price" />
    Category:
 <select name="categories" style="">
    <option value="Technology">Technology</option>
    <option value="Clothing">Clothing</option>
    <option value="Accessories">Accessories</option>
    <option value="SelfCare">Self-Care</option>
 </select>
    <br /><br />
    <textarea name="description" style="min-height:300px;min-width:600px;"></textarea>
    <input type="submit" />
</form>

@section scripts
    {
    <script type="text/javascript">

        function signedin() {
            document.getElementById('signin').style.visibility = 'hidden';
            document.getElementById('signout').style.visibility = 'visible';
        }

        function notsignedin() {
            document.getElementById('signin').style.visibility = 'visible';
            document.getElementById('signout').style.visibility = 'hidden';
        }
    </script>}